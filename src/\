pub enum Token {
    KeywordProgram,
    KeywordVar,
    KeywordEndVar,
    KeywordEndProgram,
    Identifier
}

pub struct Lexer {
    content : String,
    position : u32,
}

pub fn new(content : String) -> Lexer {
    Lexer {content, position: 0} 
}

impl Lexer {
    fn token() -> Token {
        Token::Identifier
    }
}

#[cfg(test)]
mod tests {

    #[test]
    fn program_is_a_keyword(){
        let lexer = lexer::new("PROGRAM");
        assert_eq!(lexer.token(), Token::keyword_Program);
    }
    
    #[test]
    fn var_is_a_keyword(){
    
    }

    #[test]
    fn endvar_is_a_keyword(){
    
    }

    #[test]
    fn endprorgram_is_a_keyword(){

    }

}

